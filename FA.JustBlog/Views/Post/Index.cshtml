@model IEnumerable<FA.JustBlog.Core.Models.Post>
@{
    ViewBag.Title = "All Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <!-- Main Content-->
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <!-- Post preview-->
                        <div class="post-preview">
                            @foreach (var item in Model)
                            {
                                <a href="@item.Url_Post">
                                    <h2 class="post-title">
                                       @item.Title
                                    </h2>
                                  
                                    <h3 class="post-subtitle">@Html.DisplayFor(modelItem => item.ShortDescription)</h3>
                                </a>
                                <p class="post-meta">
                                    Posted on @Html.DisplayFor(modelItem => item.PostedOn)
                                </p>
                                <!-- Divider-->
                                <hr class="my-4" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 mx-auto">
            @Html.Action("AboutCard", "Home")
            @Html.Action("MostViews", "Post")
            @Html.Action("LatestViews", "Post")
            @Html.Action("PopularTags", "Post")
            @Html.Action("AllCategory", "Post")
        </div>
    </div>
</div>



